# Database file path (absolute or relative to the process current working directory)
DB_PATH=rss_feed_data.db

# Reddit API credentials for posting
# Preferred: use a refresh token (generate with tools/generate_reddit_refresh_token.py)
REDDIT_CLIENT_ID=your_client_id
REDDIT_CLIENT_SECRET=your_client_secret
REDDIT_USER_AGENT=dashit/0.1 by your_username
REDDIT_REFRESH_TOKEN=

# Or: fallback to username/password (avoid in production if possible)
REDDIT_USERNAME=
REDDIT_PASSWORD=
SUBREDDIT_NAME=newsoflexingtonky

# Optional flair IDs
FLAIR_ID_GENERAL=
FLAIR_ID_FIRE=
FLAIR_ID_HOMELESS=

# Optional blocklists (comma-separated, case-insensitive)
# Skip posting any items whose source matches or whose domain matches
REDDIT_BLOCKED_SOURCES=lexingtontimes
REDDIT_BLOCKED_DOMAINS=lexingtonky.news

# External news APIs (optional)
NEWSAPI_ORG_KEY=
NEWSDATA_API_KEY=
MEDIASTACK_API_KEY=
